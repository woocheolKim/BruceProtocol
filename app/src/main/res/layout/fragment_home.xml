<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="homeFragment"
            type="com.example.bruceprotocol.HomeFragment" />
    </data>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C8C8C8"
            tools:context=".HomeFragment">
            <LinearLayout
                android:id="@+id/ll_nonPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_start"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="@string/start"
                    android:onClick="@{homeFragment::start}"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_play"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_stop"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_start"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="@string/stop"
                        android:onLongClick="@{(view) -> homeFragment.stop(view)}"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_pause"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_start"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:text="@string/pause"
                        android:longClickable="true"
                        android:onClick="@{homeFragment::pause}"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_counter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#000000">
            <com.gusakov.library.PulseCountDown
                android:id="@+id/pcd_cntDwn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/defaultYellow"
                android:gravity="center"
                android:text="3"
                android:textSize="100dp"
                app:pc_startValue="3" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
